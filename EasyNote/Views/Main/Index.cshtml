@{
    Layout = null;
}

<link rel="stylesheet" href="~/css/login-register-form.css" />
<link rel="stylesheet" href="~/css/start-page.css" />


<img class="background-img" src="~/assets/background.jpg" />

<div class="background-block">
    <div class="icon-block">
        <img src="~/assets/easy-note-icon.jpg"/>

        <h1>EasyNote</h1>
    </div>

    <div class="login-form-wrapper">
        <h1 class="form-title">Login</h1>
        <form action="@Url.Action("Login")" method="post">
            <div class="input-group">
                <input placeholder="Account" type="text" id="account" name="account" required>
            </div>
            <div class="input-group">
                <input placeholder="Password" type="password" id="password" name="password" required>
            </div>

            <div class="error-text">@TempData["error"]</div>

            <button type="submit" class="login-btn">Confirm</button>
        </form>

        <!--google login button-->
        <div style="align-self: center;">
            <script src="https://accounts.google.com/gsi/client?hl=en-us" async></script>
            <div id="g_id_onload"
                data-client_id="870772531163-m2r4o3gf7744q19f053oevvc83rnusjj.apps.googleusercontent.com"
                data-login_uri="https://localhost:7047/GoogleLogin"
                data-auto_prompt="false">
            </div>
            <div class="g_id_signin"
                data-type="standard"
                data-size="large"
                data-theme="outline"
                data-text="sign_in_with"
                data-shape="rectangular"
                data-logo_alignment="left"
                data-locale="en-us">
            </div>
        </div>

        <div class="register-text">
            <a>Don't have an account?</a>
            <a href="/Register">Register</a>
        </div>
    </div>
</div>