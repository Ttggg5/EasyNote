@{
    Layout = null;
}

<link rel="stylesheet" href="~/css/login-register-form.css" />
<link rel="stylesheet" href="~/css/start-page.css" />

<div>
    <img class="background-img" src="~/assets/background.jpg" />

    <div class="wrapper">
        <h1 class="form-title">Login</h1>
        <form action="@Url.Action("Login")" method="post">
            <div class="input-group">
                <input placeholder="Account" type="text" id="account" name="account" required>
            </div>
            <div class="input-group">
                <input placeholder="Password" type="password" id="password" name="password" required>
            </div>

            <div class="error-text">@TempData["error"]</div>

            <button type="submit" class="login-btn">Confirm</button>
        </form>
    </div>
</div>